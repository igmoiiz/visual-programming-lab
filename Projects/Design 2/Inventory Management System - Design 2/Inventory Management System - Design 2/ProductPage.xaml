<Page x:Class="Inventory_Management_System___Design_2.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Product Management">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Product Management" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBox x:Name="txtName" Text="Product Name" Margin="0,0,0,10"/>
            <TextBox x:Name="txtSKU" Text="SKU" Margin="0,0,0,10"/>
            <TextBox x:Name="txtUnitPrice" Text="Unit Price" Margin="0,0,0,10"/>
            <Button Content="Add Product" Click="AddProduct_Click" Margin="0,10,0,0"/>

            <TextBlock Text="Products List" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
            <DataGrid x:Name="dataGridProducts" AutoGenerateColumns="True" Height="200"/>
            <Button Content="Load Products" Click="LoadProducts_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>