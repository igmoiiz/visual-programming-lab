<Window x:Class="Inventory_Management_System.StockMovement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White" Title="StockMovement">
    <Grid>
        <TextBlock Text="Stock Movement" FontSize="24" FontWeight="Bold" Margin="10" Foreground="Green"/>
        <TextBox Name="ProductIdTextBox" Width="200" Margin="10" Text="Product ID"/>
        <TextBox Name="MovementQuantityTextBox" Width="200" Margin="10" Text="Quantity"/>
        <Button Content="Record Stock In" Click="RecordStockIn_Click" Margin="10" Background="Green" Foreground="White"/>
        <Button Content="Record Stock Out" Click="RecordStockOut_Click" Margin="10,50,10,10" Background="Green" Foreground="White"/>
        <ListView Name="StockMovementListView" Margin="10,100,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Product ID" Width="100" DisplayMemberBinding="{Binding ProductId}"/>
                    <GridViewColumn Header="Quantity" Width="100" DisplayMemberBinding="{Binding Quantity}"/>
                    <GridViewColumn Header="Movement Type" Width="100" DisplayMemberBinding="{Binding MovementType}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
    </Window>