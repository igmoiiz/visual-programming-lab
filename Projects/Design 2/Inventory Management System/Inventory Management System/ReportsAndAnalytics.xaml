<Window x:Class="Inventory_Management_System.ReportsAndAnalytics"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White" Title="ReportsAndAnalytics">
    <Grid>
        <TextBlock Text="Reporting" FontSize="24" FontWeight="Bold" Margin="10" Foreground="Green"/>
        <Button Content="Generate Inventory Report" Click="GenerateInventoryReport_Click" Margin="10" Background="Green" Foreground="White"/>
        <ListView Name="ReportListView" Margin="10,100,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Product Name" Width="150" DisplayMemberBinding="{Binding ProductName}"/>
                    <GridViewColumn Header="Total Quantity" Width="100" DisplayMemberBinding="{Binding TotalQuantity}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
    </Window>