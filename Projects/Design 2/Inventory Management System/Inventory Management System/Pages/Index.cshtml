@page
@model IndexModel
@{
    ViewData["Title"] = "Authentication Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" /> <!-- Link to the external CSS file -->
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
        }

        .form-container {
            max-width: 400px;
            margin: auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #ffffff; /* White background for the form */
        }

        h2 {
            color: #333; /* Darker text color for headings */
        }

        .form-control {
            border: 1px solid #ced4da; /* Border color for input fields */
        }

            .form-control:focus {
                border-color: #80bdff; /* Focus border color */
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25); /* Focus shadow */
            }

        .btn-primary {
            background-color: #007bff; /* Primary button color */
            border-color: #007bff; /* Primary button border color */
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Darker color on hover */
                border-color: #0056b3; /* Darker border on hover */
            }

        .toggle-form {
            cursor: pointer;
            color: #007bff; /* Link color */
            text-decoration: underline;
        }

            .toggle-form:hover {
                color: #0056b3; /* Darker link color on hover */
            }
    </style>
</head>
<body>
    <div class="form-container">
        <div id="login-form">
            <h2>Login</h2>
            <form method="post" asp-page-handler="Login">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Username" name="username" required />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" name="password" required />
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
                <p class="toggle-form" onclick="toggleForms()">Don't have an account? Sign up</p>
            </form>
        </div>

        <div id="signup-form" style="display: none;">
            <h2>Sign Up</h2>
            <form method="post" asp-page-handler="Signup">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Username" name="username" required />
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email" name="email" required />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" name="password" required />
                </div>
                <button type="submit" class="btn btn-primary">Sign Up</button>
                <p class="toggle-form" onclick="toggleForms()">Already have an account? Login</p>
            </form>
        </div>
    </div>

    <script>
        function toggleForms() {
            const loginForm = document.getElementById('login-form');
            const signupForm = document.getElementById('signup-form');
            if (loginForm.style.display === 'none') {
                loginForm.style.display = 'block';
                signupForm.style.display = 'none';
            } else {
                loginForm.style.display = 'none';
                signupForm.style.display = 'block';
            }
        }
    </script>
</body>
</html>